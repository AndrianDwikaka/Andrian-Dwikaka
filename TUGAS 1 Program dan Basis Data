        "def hari_berikutnya (h, b, t):\n",
        "    jh = [31, 29 if (t % 4 == 0 and t % 100 != 0 or t % 400 == 0) else 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31]\n",
        "\n",
        "    h += 1\n",
        "    if h > jh[b - 1]: # Jika melewati batas bulan\n",
        "        h = 1\n",
        "        b += 1\n",
        "        if b > 12: # Jika melewati bulan Desember\n",
        "            b = 1\n",
        "            t += 1\n",
        "    return h, b, t\n",
        "\n",
        "# Input dari pengguna\n",
        "h, b, t = map(int, input (\"Masukkan tanggal (hh bb tttt): \").split())\n",
        "\n",
        "# Output tanggal besok\n",
        "print(f\"Tanggal besok adalah: {hari_berikutnya(h, b, t)}\")"
      ]
    },
