        "def bulatkan_belanja (belanja):\n",
        "    sisa = belanja % 25\n",
        "    return belanja - sisa if sisa <= 12 else belanja + (25 - sisa)\n",
        "\n",
        "# Input dari pengguna\n",
        "belanja = int(input(\"Masukkan total belanja: \"))\n",
        "\n",
        "# Output hasil pembulatan\n",
        "print(f\"total setelah dibulatkan: Rp{bulatkan_belanja(belanja)}\")"
      ],
