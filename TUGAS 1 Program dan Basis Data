        "def jumlah_hari (bulan, tahun):\n",
        "    if bulan == 2:\n",
        "      return 29 if (tahun % 400 == 0) else 28\n",
        "    return 30 if bulan in [4, 6, 9, 11] else 31\n",
        "\n",
        "# Input dari pengguna\n",
        "bulan = int(input(\"Masukkan bulan (1-12): \"))\n",
        "tahun = int(input(\"Masukkan tahun: \"))\n",
        "\n",
        "# Menghitung dan mencetak jumlah hari\n",
        "jumlah_hari_result = jumlah_hari(bulan, tahun)\n",
        "print(f\"Jumlah hari dalam bulan {bulan} tahun {tahun} adalah {jumlah_hari_result} hari.\")"
      ],
